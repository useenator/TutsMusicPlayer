<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.FullActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="prev"
        android:id="@+id/prevButton"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="prevButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:id="@+id/nextButton"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="nextButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play"
        android:id="@+id/playButton"
        android:layout_above="@+id/prevButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="playButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pause"
        android:id="@+id/pauseButton"
        android:layout_above="@+id/nextButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="pauseButton"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shuffle"
        android:id="@+id/shuffleButtonFullPlayer"
        android:layout_below="@+id/prevButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="shuffleButton"/>
    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="replay"
    android:id="@+id/replayButtonFullPlayer"
    android:layout_below="@+id/nextButton"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:onClick="replayButton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SONGS"
        android:id="@+id/openSongsList"
        android:layout_below="@+id/replayButtonFullPlayer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="openSongsList"/>



    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fullPlayerSeekBar"
        android:indeterminate="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:id="@+id/songCurrentTimeTextView"
        android:layout_below="@+id/fullPlayerSeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="final"
        android:id="@+id/songDurationTimeTextView"
        android:layout_alignTop="@+id/songCurrentTimeTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="songTextView"
        android:id="@+id/songTextView"
        android:layout_below="@+id/fullPlayerSeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/songFullPlayerImageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
</RelativeLayout>
